        <description>This file contains composition specifications.</description>
        <section>
            <name>Page</name>
            <sectionID>Page</sectionID>
            <description>Settings having to do with the formating of this publication.</description>
            <setting>
                <name>Page Trimmed Width</name>
                <key>trimmedWidth</key>
                <description>The trimmed width of the page.</description>
                <type>integer</type>
