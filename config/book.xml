<root>
    <section>
        <name>Project Information</name>
        <sectionID>ProjectInfo</sectionID>
        <description>This section contains general project info for this project.</description>
        <setting>
            <name>Project Type</name>
            <key>projectType</key>
            <description>This project type name.</description>
            <type>string</type>
            <value>book</value>
        </setting>
        <setting>
            <name>Project Name</name>
            <key>projectName</key>
            <description>The name of the current project the system is processing.</description>
            <type>string</type>
            <value>None</value>
        </setting>
        <setting>
            <name>Project ID Code</name>
            <key>projectIDCode</key>
            <description>The current project's ID code.</description>
            <type>string</type>
            <value>None</value>
        </setting>
        <setting>
            <name>Project Creation Date</name>
            <key>projectCreateDate</key>
            <description>The date this project was created.</description>
            <type>string</type>
            <value></value>
        </setting>
        <setting>
            <name>Component List</name>
            <key>componentList</key>
            <description>A list of components installed in this project.</description>
            <type>list</type>
            <value></value>
        </setting>
        <setting>
            <name>Use Hyphenation</name>
            <key>useHyphenation</key>
            <description>Indicate if hyphenation is to be used in this project or not.</description>
            <type>boolean</type>
            <value>False</value>
        </setting>
        <setting>
            <name>Use Illustrations</name>
            <key>useIllustration</key>
            <description>Indicate if illustrations are to be used in this project or not.</description>
            <type>boolean</type>
            <value>False</value>
        </setting>
        <setting>
            <name>Use Maps</name>
            <key>useMap</key>
            <description>Indicate if maps are to be used in this project or not.</description>
            <type>boolean</type>
            <value>False</value>
        </setting>
    </section>
</root>

