-->


<root>
    <setting>
        <name>Use Hyphenation</name>
        <key>useHyphenation</key>
        <description>Turn on (or off) the use of hyphenation for this component type in this project.</description>
        <type>boolean</type>
        <value>True</value>
    </setting>
    <setting>
        <name>TeX Hyphenation Definitions File</name>
        <key>hyphenTexFile</key>
        <description>The name of the TeX file that contains word hyphenation break points.</description>
        <type>string</type>
        <value>hyphenation.tex</value>
    </setting>
</root>

