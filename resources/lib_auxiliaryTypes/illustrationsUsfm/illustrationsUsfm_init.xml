<root>
    <section>
        <name>Files</name>
        <sectionID>Files</sectionID>
        <description>This section contains the names and information for files of this component type used in the RPM system in this project.</description>
        <section>
            <name>Caption Data</name>
            <sectionID>CaptionsFile</sectionID>
            <description>Caption data for all the illustrations used in this project.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of this file.</description>
                <type>string</type>
                <version>False</version>
                <value>captions.csv</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Illustrations</value>
            </setting>
            <setting>
                <name>Version Control</name>
                <key>versionControl</key>
                <description>Is this file under version control?</description>
                <type>boolean</type>
                <value>True</value>
            </setting>
            <setting>
                <name>Dependent Files</name>
                <key>dependents</key>
                <description>The file(s) this file is dependent on.</description>
                <type>list</type>
                <value></value>
            </setting>
        </section>
    </section>
    <section>
        <name>Folders</name>
        <sectionID>Folders</sectionID>
        <description>This section contains the settings for all the folders needed for processing this component.</description>
        <section>
            <name>Illustrations Folder</name>
            <sectionID>IllustrationsFolder</sectionID>
            <description>The project illustrations folder.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of the folder that all project map work will be kept.</description>
                <type>string</type>
                <value>Illustrations</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value></value>
            </setting>
        </section>
    </section>
</root>

