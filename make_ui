# Import modules
import os, subprocess
from configobj import ConfigObj
from mercurial import ui, hg

# Update version number
repo = hg.repository(ui.ui(), os.getcwd())
sysConfig = ConfigObj(os.path.join(os.getcwd(), 'config', 'system.ini'), encoding='utf-8')
versionSeries = sysConfig['Rapuma']['versionSeries']
sysConfig['Rapuma']['systemVersion'] = str(versionSeries) + '.r' + str(len(repo))
sysConfig.write()

# Create a PySide compatable menu dialogs (should not include items that do not have external dialog)
dialogs = ['menu_project_add', 'menu_project_remove', 'menu_project_restore', 'menu_project_select',
            'menu_project_archive', 'menu_project_cloud', 'menu_project_backup', 'menu_project_bind',
            'menu_project_reap', 'menu_project_template', 'menu_project_update',
            'menu_project_systempreferences', 'menu_project_quit', 'menu_group_add',
            'menu_group_remove', 'menu_group_select', 'menu_group_update', 'menu_component_add',
            'menu_component_remove', 'menu_component_select', 'menu_component_update',
            'menu_help_help', 'menu_help_examples', 'main']

for i in dialogs :
    uiDlg   = os.path.join(os.getcwd(), 'lib', 'rapuma', 'dialog', i + '_dlg.ui')
    pyDlg   = os.path.join(os.getcwd(), 'lib', 'rapuma', 'dialog', i + '_dlg.py')
    cmd     = ['pyside-uic', uiDlg, '-o', pyDlg]
    if os.path.exists(uiDlg) :
        try :
            subprocess.call(cmd)
        except Exception as e :
            print str(e)

# Setup icon resources
py      = os.path.join(os.getcwd(), 'lib', 'rapuma', 'icon', 'pyresources.py')
qrc     = os.path.join(os.getcwd(), 'lib', 'rapuma', 'icon', 'pyresources.qrc')
cmd = ['pyside-rcc', '-o', py, qrc]
try :
    subprocess.call(cmd)
except Exception as e :
    print str(e)


