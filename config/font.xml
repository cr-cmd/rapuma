-->


<root>
    <setting>
        <name>Manager Type</name>
        <key>type</key>
        <description>The manager model (type) this manager is associated with.</description>
        <type>string</type>
        <value>font</value>
    </setting>
    <setting>
        <name>Primary Font</name>
        <key>primaryFont</key>
        <description>The primary font this manager uses.</description>
        <type>string</type>
        <value></value>
    </setting>
    <setting>
        <name>Installed Fonts</name>
        <key>installedFonts</key>
        <description>All the fonts this font manager uses.</description>
        <type>list</type>
        <value></value>
    </setting>
</root>

