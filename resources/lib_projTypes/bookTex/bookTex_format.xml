<?xml version="1.0" encoding="UTF-8"?>

<!--
File: pageCompTex_settings.xml
Description:
This contains all the formating for a publication and pageCompTex will use them
in the current publication.

Todo:
1) Need to connect to an external DTD, schema, whatever for validation.

-->


<root>
    <section>
        <name>General Settings</name>
        <sectionID>GeneralSettings</sectionID>
        <description>This contains general format settings for this publication.</description>
        <setting>
            <name>Format Last Edit Date</name>
            <key>formatLastEditDate</key>
            <description>The last time this format file was edited.</description>
            <type>string</type>
            <value></value>
        </setting>
        <setting>
            <name>Measurement Unit</name>
            <key>MeasurementUnit</key>
            <description>The unit of measurement used in this publication.</description>
            <type>string</type>
            <value>mm</value>
        </setting>
    </section>
    <section>
        <name>Page Settings</name>
        <sectionID>PageSettings</sectionID>
        <description>This contains page format settings for this publication.</description>
        <section>
            <name>Page Trim Height</name>
            <sectionID>PageTrimHeight</sectionID>
            <description>The finished page height.</description>
            <setting>
                <name>Page Trim Height</name>
                <key>PageTrimHeight</key>
                <description>The finished page height.</description>
                <type>integer</type>
                <value>210</value>
            </setting>
            <setting>
                <name>Page Trim Width</name>
                <key>PageTrimWidth</key>
                <description>The finished page width.</description>
                <type>integer</type>
                <value>145</value>
            </setting>
        </section>
    </section>
</root>

