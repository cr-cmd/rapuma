<root>
    <section>
        <sectionID>FontInformation</sectionID>
        <description>General information for this typeface family.</description>
        <setting>
            <name>Font Family Name</name>
            <key>fontFamilyName</key>
            <description>The name of this typeface family.</description>
            <type>string</type>
            <value>BoonKitU</value>
        </setting>
        <setting>
            <name>Font ID</name>
            <key>fontID</key>
            <description>The internal ID code of this font family.</description>
            <type>string</type>
            <value>Boonkit</value>
        </setting>
        <setting>
            <name>Font Folder</name>
            <key>fontFolder</key>
            <description>The font family folder name.</description>
            <type>string</type>
            <value>BoonKitU</value>
        </setting>
        <setting>
            <name>Features</name>
            <key>features</key>
            <description>The features that will be used for this font.</description>
            <type>list</type>
            <value></value>
        </setting>
    </section>
    <section>
        <name>Typeface Regular</name>
        <sectionID>TypefaceRegular</sectionID>
        <description>Settings for the regular typeface font.</description>
        <setting>
            <name>File</name>
            <key>file</key>
            <description>File name for this typeface.</description>
            <type>string</type>
            <value>BoonKitU.ttf</value>
        </setting>
        <setting>
            <name>Name</name>
            <key>name</key>
            <description>The name for this typeface.</description>
            <type>string</type>
            <value>BoonKitU</value>
        </setting>
        <setting>
            <name>Style</name>
            <key>style</key>
            <description>The style of this typeface.</description>
            <type>string</type>
            <value>TuaMuang</value>
        </setting>
        <setting>
            <name>TeXMapping</name>
            <key>texMapping</key>
            <description>The TeX font style this typeface maps to.</description>
            <type>string</type>
            <value>regular</value>
        </setting>
        <setting>
            <name>Type</name>
            <key>type</key>
            <description>The type of font for this typeface.</description>
            <type>string</type>
            <value>TrueType font</value>
        </setting>
        <setting>
            <name>Version</name>
            <key>version</key>
            <description>The version of this typeface.</description>
            <type>string</type>
            <value>Macromedia Fontographer 4.1.2 3/14/97</value>
        </setting>
        <setting>
            <name>Font Copyright</name>
            <key>copyright</key>
            <description>The copyright information for this typeface.</description>
            <type>string</type>
            <value>Generated by Fontographer 4.1.2 Derived from Boonkit Special TuaMuang by ttfbuilder v0.32</value>
        </setting>
        <setting>
            <name>Modify</name>
            <key>modify</key>
            <description>Request any modifications for this typeface such as bolding.</description>
            <type>list</type>
            <value></value>
        </setting>
        <setting>
            <name>Mapping</name>
            <key>mapping</key>
            <description>Specify a file that might contain any character mapping modifications.</description>
            <type>string</type>
            <value>None</value>
        </setting>
    </section>
