<root>
    <section>
        <name>Files</name>
        <sectionID>Files</sectionID>
        <description>This section contains the names and information for files of this component type used in the RPM system in this project.</description>
        <section>
            <name>Font Configuration File</name>
            <sectionID>FontConfig</sectionID>
            <description>Font configuration data for all the fonts used in this project.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of this file.</description>
                <type>string</type>
                <value>fonts.conf</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Fonts</value>
            </setting>
            <setting>
                <name>Version Control</name>
                <key>versionControl</key>
                <description>Is this file under version control?</description>
                <type>boolean</type>
                <value>False</value>
            </setting>
        </section>
        <section>
            <name>Font Definition File</name>
            <sectionID>FontDefFile</sectionID>
            <description>Font definition data for all the fonts used in this project.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of this file.</description>
                <type>string</type>
                <value>fonts.tex</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Fonts</value>
            </setting>
            <setting>
                <name>Version Control</name>
                <key>versionControl</key>
                <description>Is this file under version control?</description>
                <type>boolean</type>
                <value>True</value>
            </setting>
            <setting>
                <name>Dependent Files</name>
                <key>dependents</key>
                <description>The file(s) this file is dependent on.</description>
                <type>list</type>
                <value></value>
            </setting>
        </section>
    </section>
    <section>
        <name>Folders</name>
        <sectionID>Folders</sectionID>
        <description>This section contains the settings for all the folders needed for processing this component.</description>
        <section>
            <name>Project Font Folder</name>
            <sectionID>Fonts</sectionID>
            <description>The project fonts folder.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The folder where all the project fonts are kept.</description>
                <type>string</type>
                <value>Fonts</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value></value>
            </setting>
        </section>
    </section>
</root>

